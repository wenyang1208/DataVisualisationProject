{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Unemployment Rate in Malaysia by State (2023)",
    "fontSize": 24,
    "fontWeight": "bold",
    "font": "Times New Roman",
    "anchor": "start"
  },
  "width": 1000,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "ne_10m_admin_1_states_provinces.topojson.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "lfs_qtr_state.csv"
        },
        "key": "state",
        "fields": ["avg_u_rate"]
      }
    },
    {
      "calculate": "datum.properties.admin == 'Malaysia' ? 'Malaysia' : 'Other'",
      "as": "country"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "#000000",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "condition": {
        "test": "datum.country == 'Singapore' && isValid(datum.avg_u_rate)",
        "field": "avg_u_rate",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1, 2, 3, 4],
          "range": ["#fef0d9", "#fdd49e", "#fc8d59", "#e34a33", "#b30000"]
        }
      },
      "value": "grey"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "avg_u_rate", "type": "quantitative", "title": "Average Unemployment Rate (%)", "format":".2f"}
    ]
  },
  "config": {
    "background": "#e6f3ff"
  }
}