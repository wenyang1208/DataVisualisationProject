    ]
  },
  "width": 900,
  "height": 320,
  "transform": [
    {"window": [{"op": "count", "as": "index"}]},
    {"fold": ["Population (in thousands)", "GDP Annual Growth (%)", "Participation Rate (%)", "Unemployment Rate (%)"]},
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "params": [{
        "name": "legendSelect",
        "select": {"type": "point", "fields": ["State"]},
        "bind": "legend"
      }],
      "mark": "line",
      "encoding": {
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": ["Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Pulau Pinang", "Perak", "Perlis", "Selangor", "Terengganu", "Sabah", "Sarawak", "Kuala Lumpur", "Labuan", "Putrajaya"],
            "range": [ "#86C1DC", "#4682B4", "#000080", "#7FFFD4", "#a45757", "#2E8B57", "#DAA520", "#808000", "#f000ff", "#FFA500", "#8B4513", "#C71585", "#6A5ACD", "#9932CC", "#965093", "#fdabab "]
          }
        },
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {
          "condition": [
            {"param": "legendSelect", "value": 1}
          ],
          "value": 0.2
        },
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {"type": "nominal", "field": "State"},
          {"type": "nominal", "field": "key", "title": "Variable"},
          {"type": "quantitative", "field": "value", "title":"Value", "format": ",.2f"}
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label", "fontWeight":"bold"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max", "format": ",.2f"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 15, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label", "fontWeight":"bold"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid", "format": ",.2f"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 15, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 300}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label", "fontWeight":"bold"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min", "format": ",.2f"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 15, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null, "labelFontSize": 15},
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5, "fontSize": 15},
      "tick": {"orient": "horizontal"}
    },
    "legend": {
      "symbolType": "square",
      "strokeWidth": 2,
      "symbolOpacity": 0.8,
      "labelFontSize": 15,
      "titleFontSize": 15
    }
  }
}
