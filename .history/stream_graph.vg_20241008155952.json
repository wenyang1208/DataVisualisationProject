{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "gdp_qtr_real_supply.csv"
  },
  "mark": {
    "type": "area",
    "interpolate": "basis"  // Smooths the curves for a better streamgraph effect
  },
  "encoding": {
    "x": {
      "timeUnit": "yearquarter",
      "field": "date",
      "type": "temporal",
      "axis": {
        "domain": false,
        "format": "%Y-%m-%d",
        "tickSize": 0,
        "title": "Date"
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "value",
      "type": "quantitative",
      "stack": "center",  // Central stacking for streamgraph
      "axis": null
    },
    "color": {
      "field": "sector",
      "type": "nominal",
      "scale": {"scheme": "category20b"},
      "legend": {"title": "Sector"}
    },
    "tooltip": [
      {"timeUnit": "yearquarter", "field": "date", "type": "temporal", "title": "Date"},
      {"field": "sector", "type": "nominal", "title": "Sector"},
      {"field": "value", "type": "quantitative", "title": "Value", "format": ".2f"}
    ]
  },
  "config": {
    "axisX": {
      "labelAngle": -45
    }
  }
}
